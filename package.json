{
  "name": "hot-redux-chassis",
  "version": "0.0.1",
  "author": "Hanse",
  "license": "MIT",
  "engines": {
    "node": "7.2.1"
  },
  "scripts": {
    "postinstall": "if [ $BUILD_ASSETS ]; then npm run build; fi",
    "start": "nodemon --ignore app --ignore tests --exec babel-node -- server/index.js",
    "build": "NODE_ENV=production webpack  --config webpack/webpack.config.babel.js --color -p --progress --env",
    "flow": "flow",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint app --ignore-path .gitignore",
    "lint:css": "stylelint ./app/**/*.css",
    "test": "NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hanse/hot-redux-chassis.git"
  },
  "dependencies": {
    "babel-cli": "6.18.0",
    "babel-core": "6.21.0",
    "babel-eslint": "7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "6.2.10",
    "babel-plugin-transform-react-jsx-source": "6.9.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-0": "6.16.0",
    "body-parser": "1.15.2",
    "classnames": "2.2.5",
    "css-loader": "0.26.1",
    "empty": "0.10.1",
    "enzyme": "2.7.0",
    "eslint": "3.12.2",
    "eslint-config-airbnb": "13.0.0",
    "eslint-import-resolver-webpack": "0.7.0",
    "eslint-plugin-flowtype": "2.29.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.8.0",
    "express": "4.14.0",
    "extract-text-webpack-plugin": "2.0.0-beta.3",
    "file-loader": "0.9.0",
    "flow-bin": "^0.37.3",
    "history": "^4.5.0",
    "html-webpack-plugin": "2.24.1",
    "identity-obj-proxy": "3.0.0",
    "immutable": "3.8.1",
    "immutable-devtools": "0.0.7",
    "imports-loader": "^0.7.0",
    "isomorphic-fetch": "2.2.1",
    "jest": "^18.0.0",
    "json-loader": "0.5.4",
    "json-server": "^0.9.4",
    "lodash": "4.17.2",
    "node-uuid": "1.4.7",
    "nodemon": "1.11.0",
    "null-loader": "0.1.1",
    "postcss-cssnext": "2.9.0",
    "postcss-import": "9.0.0",
    "postcss-loader": "^1.2.1",
    "postcss-nested": "1.0.0",
    "raw-loader": "0.5.1",
    "react": "15.4.1",
    "react-addons-test-utils": "15.4.1",
    "react-dom": "15.4.1",
    "react-hot-loader": "3.0.0-beta.5",
    "react-markdown": "2.4.2",
    "react-overlays": "0.6.10",
    "react-redux": "^5.0.1",
    "react-router": "3.0.0",
    "react-router-redux": "4.0.7",
    "redux": "3.6.0",
    "redux-logger": "2.7.4",
    "redux-observable": "0.12.2",
    "rxjs": "^5.0.1",
    "style-loader": "0.13.1",
    "stylelint": "^7.7.0",
    "stylelint-config-standard": "^15.0.1",
    "url-loader": "0.5.7",
    "webpack": "2.2.0-rc.1",
    "webpack-express-middleware": "1.1.1"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "indentation": 2,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "jest": {
    "globals": {
      "__DEV__": false
    },
    "moduleDirectories": [
      "<rootDir>",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/tests/FileStub.js",
      "^.+\\.css$": "<rootDir>/tests/CSSStub.js"
    },
    "testRegex": "\\.spec\\.(js|jsx)$"
  }
}
